<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.shoping_fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

  <LinearLayout
      android:layout_width="280dp"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:padding="10dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginStart="15dp"
      android:background="#2C2C2C"
      >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="Search Now"
          android:layout_marginStart="10dp"
          android:textSize="17sp"
          />

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="125dp"
          android:layout_gravity="center_vertical"
          android:src="@drawable/searchh"/>



  </LinearLayout>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/outline_document_scanner_24"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp"
            android:src="@drawable/microphone"/>



    </LinearLayout>


    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:tabTextColor="@color/g_gray500"
        android:id="@+id/tab_layout"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabRippleColor="@color/white"
        app:tabSelectedTextColor="@color/g_blue_gray200"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_Viewpager"
        android:background="@color/g_gray500"
        />


</LinearLayout>